<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_half_drawer"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp"
        android:paddingTop="24dp"
        android:paddingBottom="12dp">

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/delete_purple" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/iv_forward"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/forward_purple" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:background="@drawable/sp_white_4">

        <ImageView
            android:id="@+id/iv_cover"
            android:layout_width="236dp"
            android:layout_height="236dp"
            android:layout_gravity="center"
            android:src="#33000000" />

        <LinearLayout
            android:id="@+id/ll_unfinished"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_change"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/img_default" />

            <TextView
                android:id="@+id/tv_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="点击上传甜蜜时刻"
                android:textColor="#ffffff"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_finished"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="end|bottom"
            android:layout_margin="2dp"
            android:src="@drawable/done_big" />

    </FrameLayout>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="一起看电影"
        android:textColor="#294dca"
        android:textSize="16sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_sub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="13dp"
            android:text="一起看一场走心电影叭"
            android:textColor="#294dca"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/iv_edit"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/edit" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="13dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:src="@drawable/calendar_purple"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="2022-07-22"
            android:textColor="#294dca"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/iv_done"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:src="@mipmap/cancel_yellow"
            android:visibility="visible" />

    </LinearLayout>


</LinearLayout>