<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginStart="30dp"
    android:layout_marginEnd="30dp"
    android:background="@drawable/sp_294dca_e5baff"
    android:paddingStart="8dp"
    android:paddingTop="4dp"
    android:paddingEnd="8dp"
    android:paddingBottom="14dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/sp_f2ddff"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="17dp"
        android:paddingBottom="19dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确认配对信息"
            android:textColor="#343434"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="绑定后不可修改性别哦"
            android:textColor="#666666"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="23dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/fl_avatar_mine"
                    android:layout_width="66dp"
                    android:layout_height="66dp"
                    android:background="@drawable/sp_ff007a">

                    <com.community.mua.views.CircleImageView
                        android:id="@+id/iv_avatar_mine"
                        android:layout_width="58dp"
                        android:layout_height="58dp"
                        android:layout_gravity="center" />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_name_mine"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        tools:text="adsadsadsads"
                        tools:drawableEnd="@drawable/male_small"
                        android:textColor="#343434"
                        android:textSize="14sp" />

                </LinearLayout>


            </LinearLayout>

            <ImageView
                android:id="@+id/iv_heart"
                android:layout_width="68dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:src="@drawable/al_heartbeats" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="66dp"
                    android:layout_height="66dp"
                    android:id="@+id/fl_avatar_ta"
                    android:background="@drawable/sp_ff007a">

                    <com.community.mua.views.CircleImageView
                        android:id="@+id/iv_avatar_ta"
                        android:layout_width="58dp"
                        android:layout_height="58dp"
                        android:layout_gravity="center" />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_name_ta"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:singleLine="true"
                        android:textColor="#343434"
                        android:textSize="14sp"
                        tools:drawableEnd="@drawable/male_small"
                        tools:text="13" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="38dp"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:background="@drawable/sl_cancel_small"
                android:text="修改信息"
                android:textColor="#626262"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btn_confirm"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:layout_marginStart="8dp"
                android:background="@mipmap/btn_yellow"
                android:text="确定"
                android:textColor="#6A4C00"
                android:textSize="16sp" />

        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="end"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="4dp"
        android:src="@drawable/xmark" />
</FrameLayout>