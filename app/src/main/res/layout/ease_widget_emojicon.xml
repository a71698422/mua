<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_face_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FCF4F4"
    android:orientation="vertical"
    >

    <com.community.mua.imkit.widget.emojicon.EaseEmojiconPagerView
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:id="@+id/pager_view"
        />
    
    <com.community.mua.imkit.widget.emojicon.EaseEmojiconIndicatorView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/indicator_view"
        android:layout_marginBottom="2dp"
        />

    <com.community.mua.imkit.widget.emojicon.EaseEmojiconScrollTabBar
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:visibility="gone"
        android:id="@+id/tab_bar"
         />
    
</LinearLayout>